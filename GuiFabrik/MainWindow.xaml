<Window x:Class="GuiFabrik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuiFabrik"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Maschinenstatus:"/>
            <Label Name="StatusLabel" Content="Status"/>
            <Label Content="Signalleuchte:"/>
            <Label Name="SignalLightLabel" Content="Signal Light"/>
            <Button Name="StartButton" Content="Start" Click="StartButton_Click" Width="100" Margin="10,0,50,0"/>
            <Button Name="StopButton" Content="Stop" Click="StopButton_Click" Width="100" Margin="10,10,50,0"/>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Jobname" VerticalAlignment="Center" Margin="5,0,2,0"/>
                <TextBox Name="JobNameTextBox" Width="200" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Stückzahl" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox Name="QuantityTextBox" Width="200" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Jobtyp:" VerticalAlignment="Center" Margin="5,0,17,0"/>
                <ComboBox Name="JobTypeComboBox" Width="200">
                    <ComboBoxItem Content="1 - Auto bauen"/>
                    <ComboBoxItem Content="2 - Kabel erstellen"/>
                    <ComboBoxItem Content="3 - Metallstück bearbeiten"/>
                </ComboBox>
            </StackPanel>

            <Button Name="AddJobButton" Content="Job hinzufügen" Click="AddJobButton_Click" Width="100" Margin="10,0,50,0"/>
            <Button Name="StartJobsButton" Content="Jobs starten" Click="StartJobsButton_Click" Width="100" Margin="10,10,50,0"/>
            <Button Name="GetJobStatusButton" Content="Jobstatus abfragen" Click="GetJobStatusButton_Click" Width="100" Margin="10,10,50,0"/>

            <Label Name="JobStatusLabel" Content="Jobstatus" Margin="10"/>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox Name="ErrorCodeTextBox" Width="200" Margin="5"/>
                <TextBlock Text="Fehlercode" IsHitTestVisible="False" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <Button Name="FixErrorButton" Content="Fehler beheben" Click="FixErrorButton_Click" Width="100" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>